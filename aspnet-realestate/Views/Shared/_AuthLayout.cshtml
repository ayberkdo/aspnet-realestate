<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - aspnet_realestate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aspnet_realestate.styles.css" asp-append-version="true" />

    <script src="~/js/tailwind.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body class="inter">
    <div class="container p-4 rounded vh-100">
        <div class="row h-100">
            <!-- Sol Resim Alanı -->
            <div class="col-lg-6 d-none d-lg-block position-relative p-0">

                <img src="https://i.pinimg.com/1200x/9d/fc/61/9dfc61258cd6884a5006a8381f2554df.jpg"
                     alt="Login Banner" class="w-100 h-100 object-fit-cover">

                <!-- Overlay -->
                <div class="position-absolute top-0 start-0 w-100 h-100"
                     style="background: rgba(0,0,0,0.5);"></div>

                <!-- Logo -->
                <div class="position-absolute top-0 start-0 p-4">
                    <a asp-controller="Public" asp-action="Index" class="text-2xl font-bold text-gray-800 decoration-none inline-flex items-center gap-x-2">
                        <img src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    </a>
                </div>
                <!-- Alt Kısımdaki Yazı -->
                <!-- Alt Kısımdaki Yazı -->
                <div class="position-absolute start-0 bottom-5 p-4 text-white" style="max-width: 80%;">
                    <h2 class="fw-bold fs-3 fs-lg-2" style="text-shadow: 0 2px 6px rgba(0,0,0,0.6);">
                        Gayrimenkul dünyasına hoş geldiniz
                    </h2>
                    <p class="mb-0 fs-6 fs-lg-5 mt-3" style="text-shadow: 0 1px 4px rgba(0,0,0,0.6);">
                        En iyi ilanlar, en hızlı şekilde sizinle.
                    </p>
                </div>

            </div>

            <!-- Sağ Form Alanı -->
            <div class="col-lg-6 d-flex align-items-center justify-content-center">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>