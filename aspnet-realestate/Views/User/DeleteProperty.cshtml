@{
    Layout = "_UserLayout";
    ViewData["Title"] = "İlanı Sil";
}
@model PropertyViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="bg-danger py-4 text-center text-white">
                    <i class="bi bi-exclamation-triangle display-4"></i>
                </div>
                <div class="card-body p-5 text-center">
                    <h3 class="fw-bold mb-3 text-dark">Emin misiniz?</h3>
                    <p class="text-muted mb-4">
                        <strong>"@Model.Title"</strong> başlıklı ilanınız kalıcı olarak silinecektir. Bu işlem geri alınamaz.
                    </p>

                    <form asp-controller="User" asp-action="DeleteProperty" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <button type="submit" class="btn btn-danger px-5 rounded-pill fw-bold py-2">Evet, Sil</button>
                            <a asp-action="Properties" class="btn btn-light px-5 rounded-pill py-2 border">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>