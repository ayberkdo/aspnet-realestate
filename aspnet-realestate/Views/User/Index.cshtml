@model UserDashboardViewModel
@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Kullanıcı Paneli";
}

<div class="flex flex-col gap-y-6">

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-2xl font-bold tracking-tight text-neutral-800">Hoş Geldiniz!</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row g-3">
            <div class="col-6 col-md-4">
                <div class="card shadow-sm border-0 h-100 bg-white">
                    <div class="card-body py-4">
                        <h6 class="card-title fw-semibold text-secondary mb-1">İlanlarım</h6>
                        <p class="card-text fs-3 fw-bold mb-0 text-neutral-900">@Model.MyTotalProperties</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="card shadow-sm border-0 h-100 bg-white">
                    <div class="card-body py-4">
                        <h6 class="card-title fw-semibold text-secondary mb-1">Aktif İlanlarım</h6>
                        <p class="card-text fs-3 fw-bold mb-0 text-success">@Model.MyActiveProperties</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card shadow-sm border-0 h-100 bg-white">
                    <div class="card-body py-4">
                        <h6 class="card-title fw-semibold text-secondary mb-1">Gelen Mesajlar</h6>
                        <p class="card-text fs-3 fw-bold mb-0 text-primary">@Model.MyNewMessages</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>